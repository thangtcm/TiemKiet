@model ICollection<ProvinceBranchVM>
@using TiemKiet.Models.ViewModel;
@{
    ViewBag.Title = "Cửa hàng";
}

<main id="main">
    <section id="header-title">
        <div class="container-fluid page-header text-center" style="padding: 10rem 0;">
            <div class="container py-5" data-aos="fade-up" data-aos-duration="3000">
                <h1 class="display-3 text-white mb-3">Cửa Hàng</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center mb-0">
                        <li class="breadcrumb-item"><a class="text-white" asp-action="Index" asp-controller="Home">Trang Chủ</a></li>
                        <li class="breadcrumb-item"><a class="text-white" asp-action="Index" asp-controller="Restaurant">Cửa Hàng</a></li>
                    </ol>
                </nav>
            </div>
        </div>
    </section>
    <section id="restaurant" class="section restaurant">
        <div class="container">
            <div class="section-title" data-aos="fade-up">
                <h2>TÌM CỬA HÀNG</h2>
            </div>
            <div class="row justify-content-between">
                <div class="col-12 col-lg-3 sidebar-border">
                    <div class="container">
                        <aside class="page_sidebar px-3">
                            <p class="fw-bold fs-4">Theo Khu Vực</p>
                            <ul class="main-categories nav nav-tabs" role="tablist">
                                @{
                                    foreach(var item in Model)
                                    {
                                        var provinceID = $"#Province{item.ProvinceId}";
                                        <li class="main-nav-list">
                                            <a href="#" class="@(item == Model.FirstOrDefault() ? "active" : "")" data-toggle="tab" data-bs-toggle="tab" data-bs-target="@provinceID" type="button" role="tab" aria-controls="nav-home" aria-selected="true">
                                                @item.ProvinceName (@item.BranchCount.ToString())
                                            </a>
                                        </li>
                                    }
                                }
                            </ul>
                        </aside>
                    </div>
                </div>
                <div class="col-lg-9 col-sm-12 col-md-12">
                    <div class="tab-content">
                        @foreach(var item in Model)
                        {
                            var provinceID = $"Province{item.ProvinceId}";
                            <div class="tab-pane fade show @(item == Model.FirstOrDefault() ? "active" : "")" id="@provinceID" role="tabpanel" aria-labelledby="nav-tab">
                                <div class="container-fluid ">
                                    <h3 class="text-primary text-start">Khám phá @item.BranchCount cửa hàng của chúng tôi ở @item.ProvinceName</h3>
                                    <form asp-action="Index" asp-controller="Restaurant" asp-area="" class="row py-4">
                                        <div class="col-12 col-sm-6 col-lg-4">
                                            <div class="form-group local-forms">
                                                <label>Quận Huyện <span class="text-danger">*</span></label>
                                                <select class="form-control select select-restaurants districtFilter" name="districtId">
                                                    <option value="">Chọn Quận/Huyện</option>
                                                    @if(item.districts != null)
                                                    {
                                                        @foreach(var district in item.districts)
                                                        {
                                                            <option value="@district.DistrictId">@district.DistrictName</option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="container">
                                    <p class="text-start text-dark">Có @Model.Count cửa hàng</p>
                                    <div class="row gx-5 mb-5">
                                        @if(item.branches != null)
                                        {
                                            @foreach(var branch in item.branches)
                                            {
                                                <div class="col-lg-6 mb-5 product-card" data-district-id="@branch.DistrictId">
                                                    <div class="card lift h-100 p-0">
                                                        <div id="owl-branch" class="owl-carousel owl-theme owl-loaded owl-drag owl-branch">
                                                            @foreach (var img in branch.Imagelst!)
                                                            {
                                                                <div class="item">
                                                                    <img class="card-img-top" src="@img" style="max-height: 18rem; object-fit:cover"
                                                                    alt="...">
                                                                </div>
                                                            }
                                                        </div>
                                                        <div class="card-body">
                                                            <h4 class="card-title mb-2">@branch.BranchName</h4>
                                                            <hr>
                                                            <div class="card-text">
                                                                <p><i class="fas fa-map-marker-alt me-2"></i>69/1/7 Nguyễn Gia Trí, P. 25,  Quận Bình Thạnh, TP. Hồ Chí Minh</p>
                                                                <p><i class="fas fa-utensils me-2"></i>7:00 - 23:00</p>
                                                                <div class="d-flex flex-wrap ">
                                                                    <div class="pe-4">
                                                                        <p>
                                                                            <i class="fas fa-biking me-2"></i>
                                                                            Có chỗ giữ xe
                                                                        </p>
                                                                    </div>
                                                                    <div class="pe-4">
                                                                        <p>
                                                                            <i class="fas fa-biking me-2"></i>
                                                                            Có chỗ giữ xe
                                                                        </p>
                                                                    </div>
                                                                    <div class="pe-4">
                                                                        <p>
                                                                            <i class="fas fa-biking me-2"></i>
                                                                            Có chỗ giữ xe
                                                                        </p>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="card-footer bg-transparent border-top d-flex align-items-center justify-content-center">
                                                            <a href="@branch.UrlGoogleMap" class="text-center btn btn-primary">Xem Bản Đồ</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        }
                                        
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('.districtFilter').change(function () {
                var selectedDistrictId = $(this).val();

                // Hiển thị tất cả các card nếu giá trị là ''
                if (selectedDistrictId === '') {
                    $('.product-card').removeClass('d-none');
                } else {
                    $('.product-card').addClass('d-none');
                    $('.product-card[data-district-id="' + selectedDistrictId + '"]').removeClass('d-none');
                }
            });
        });
    </script>
}