@using TiemKiet.Helpers;
@using TiemKiet.Models.ViewModel;
@model UserInfoVM

@{
    ViewData["Title"] = "Quản lý thông tin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main id="main">
    <section id="header-title">
        <div class="container-fluid page-header text-center" style="padding: 10rem 0;">
            <div class="container py-5" data-aos="fade-up"
                 data-aos-duration="3000">
                <h1 class="display-3 text-white mb-3">Thông tin tài khoản</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center mb-0">
                        <li class="breadcrumb-item"><a class="text-white" href="#">Người dùng</a></li>
                        <li class="breadcrumb-item text-white active" aria-current="page">Thông tin tài khoản</li>
                    </ol>
                </nav>
            </div>
        </div>
    </section>
    <section id="profile" class="section profile">
        <div class="container">
            <div class="row">
                <div class="col-xl-3 col-lg-4 col-md-5">
                    <div class="sidebar-categories">
                        <div class="user-info-card my-3 text-primary" style="@CallBack.GetBackGroundRank(Model!.Point!.Value);">
                            <div class="user-info-card-header ">
                                <span>@Model.FullName</span>
                                <p>@Model.Point Điểm - <span class="fw-bold">hạng @Model.RankName</span></p>
                            </div>
                            <div class="user-card-barcode d-flex flex-column align-items-center">
                                <img src="@Url.Action("GenerateBarcode", "Account", new { barcodeData = Model.UserId.ToString() })" , new { code=Model.UserId }))" alt="">
                                <p class="mb-0">@Model.UserId</p>
                            </div>
                            <div class="user-info-detail">
                                <div class="progress">
                                    <div class="progress-bar @CallBack.GetClassProgress(Model.Score!.Value) progress-bar-striped" style="width:@(Model.Percent)%" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <partial name="_NavMenuProfile" />
                    </div>
                </div>
                <div class="col-xl-9 col-lg-8 col-md-7">
                    <div class="content w-100 pt-0">
                        <div class="container">
                            <div class="content-page-header">
                                <h5>Cài đặt tài khoản</h5>
                            </div>
                            <div class="row">
                                <form asp-action="ChangePassword" asp-controller="Account" asp-area="" class="py-2">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="UserId" />
                                    <div class="form-group">
                                        <label asp-for="PasswordOld" class="form-label font-weight-600">Nhập mật khẩu cũ</label>
                                        <input asp-for="PasswordOld" class="form-control" placeholder="Nhập mật khẩu cũ">
                                        <span asp-validation-for="PasswordOld" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Password" class="form-label font-weight-600">Nhập mật khẩu mới</label>
                                        <input asp-for="Password" class="form-control" placeholder="Nhập mật khẩu mới">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Lưu thông tin</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>