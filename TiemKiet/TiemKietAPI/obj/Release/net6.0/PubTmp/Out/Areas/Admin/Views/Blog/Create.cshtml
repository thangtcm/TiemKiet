@model TiemKiet.ViewModel.BlogInfoVM

@{
    ViewData["Title"] = "Tạo câu chuyện";
}

<div class="content container-fluid">
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h3 class="page-title">Add Teachers</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Blog" asp-area="Admin">Blog</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-12">
                                <h5 class="form-title"><span>Basic Details</span></h5>
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="form-group local-forms">
                                    <label asp-for="Title" class="control-label">Tiêu đề ngắn<span class="login-danger">*</span></label>
                                    <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề ngắn" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="form-group local-forms">
                                    <label asp-for="Author" class="control-label">Tác giả<span class="login-danger">*</span></label>
                                    <input asp-for="Author" class="form-control" placeholder="Nhập tác giả" />
                                    <span asp-validation-for="Author" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12">
                                <div class="form-group">
                                    <label>Blog Image</label>
                                    <div class="avatar-preview">
                                        <img class="my-3 avatar-xxl object-fit-cover" id="imagePreview" src="" alt="User profile picture">
                                    </div>
                                    <div class="change-photo-btn">
                                        <div>
                                        <p>Add Image</p></div>
                                        <input type="file" name="upload" class="upload" id="imageUpload" accept=".png, .jpg, .jpeg">
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group local-forms">
                                    <label asp-for="Heading" class="control-label">Tiêu đề<span class="login-danger">*</span></label>
                                    <input asp-for="Heading" class="form-control" placeholder="Nhập Tiêu đề" />
                                    <span asp-validation-for="Heading" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group local-forms">
                                    <label asp-for="ShortDescription" class="control-label">Mô tả ngắn<span class="login-danger">*</span></label>
                                    <input asp-for="ShortDescription" class="form-control" placeholder="Nhập mô tả ngắn" />
                                    <span asp-validation-for="ShortDescription" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group local-forms">
                                    <label asp-for="Content">Nội dung<span class="login-danger">*</span></label>
                                    <textarea id="editor1" asp-for="Content" class="editor" cols="30" rows="10"></textarea>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="student-submit">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
