@model TiemKiet.Models.BlogPost

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content container-fluid">
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h3 class="page-title">Add Teachers</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="teachers.html">Blog</a></li>
                    <li class="breadcrumb-item active">Add Blog</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-12">
                                <h5 class="form-title"><span>Basic Details</span></h5>
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="form-group local-forms">
                                    <label asp-for="Heading" class="control-label">@Html.DisplayNameFor(model => model.Heading)<span class="login-danger">*</span></label>
                                    <input asp-for="Heading" class="form-control" placeholder="Nhập Tiêu đề" />
                                    <span asp-validation-for="Heading" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="form-group local-forms">
                                    <label asp-for="ShortDescription" class="control-label">@Html.DisplayNameFor(model => model.ShortDescription)<span class="login-danger">*</span></label>
                                    <input asp-for="ShortDescription" class="form-control" placeholder="Nhập mô tả ngắn" />
                                    <span asp-validation-for="ShortDescription" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="form-group local-forms">
                                    <label asp-for="Author" class="control-label">@Html.DisplayNameFor(model => model.Author)<span class="login-danger">*</span></label>
                                    <input asp-for="Author" class="form-control" placeholder="Nhập tác giả" />
                                    <span asp-validation-for="Author" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group local-forms">
                                    <label asp-for="Content">@Html.DisplayNameFor(model => model.Content)<span class="login-danger">*</span></label>
                                    <textarea id="editor1" asp-for="Content" class="editor" cols="30" rows="10"></textarea>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="student-submit">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
