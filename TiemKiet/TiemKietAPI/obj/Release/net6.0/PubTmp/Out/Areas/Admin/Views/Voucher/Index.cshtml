@model ICollection<VoucherInfoVM>
@using TiemKiet.Models.ViewModel;
@{
    ViewData["Title"] = "Danh sách voucher";
}

<div class="content container-fluid">
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h3 class="page-title">@ViewData["Title"]</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home" asp-area="Admin">Dashboard</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card card-table">
                <div class="card-body">
                    <div class="page-header">
                        <div class="row align-items-center">
                            <div class="col">
                                <h3 class="page-title">@ViewData["Title"]</h3>
                            </div>
                            <div class="col-auto text-end float-end ms-auto download-grp">
                                <a href="#" class="btn btn-outline-primary me-2">
                                    <i class="fas fa-download"></i> Download
                                </a>
                                <a class="btn btn-primary" asp-controller="Voucher" asp-action="Create" asp-area="Admin">
                                    <i class="fas fa-plus"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table border-0 star-student table-hover table-center mb-0 datatable table-striped" style="width:100%">
                            <thead>
                                <tr role="row">
                                    <th>ID</th>
                                    <th>Tên voucher</th>
                                    <th>Mã giảm giá</th>
                                    <th>Loại voucher</th>
                                    <th>Giảm giá</th>
                                    <th>Giảm giá tối đa</th>
                                    <th>Tổng hóa đơn tối thiểu</th>
                                    <th>Trạng thái</th>
                                    <th class="text-end">Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr role="row">
                                        <td>
                                            @item.VoucherId
                                        </td>
                                        <td>
                                            @(String.IsNullOrEmpty(item.VoucherName) ? "" : item.VoucherName)
                                        </td>
                                        <td>
                                            @(String.IsNullOrEmpty(item.VoucherCode) ? "" : item.VoucherCode)
                                        </td>
                                        <td>
                                            @item.VoucherType.ToString()
                                        </td>
                                        <td>
                                            @item.DiscountValue.ToString() <span>@(item.DiscountType == 0 ? "%" : "VND")</span>
                                        </td>
                                        <td>
                                            @item.MaxDiscountAmount
                                        </td>
                                        <td>
                                            @item.MinBillAmount
                                        </td>
                                        <td><span class="badge bg-primary-light">Đang hoạt động</span></td>
                                        <td class="text-end">
                                            <div class="actions">
                                                <a asp-action="Details" asp-route-id="@item.VoucherId" class="btn btn-sm bg-success-light me-2">
                                                    <i class="far fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-Id="@item.VoucherId" class="btn btn-sm bg-danger-light">
                                                    <i class="far fa-edit"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

