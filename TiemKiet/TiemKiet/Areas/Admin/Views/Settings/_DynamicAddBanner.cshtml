@model TiemKiet.Models.ViewModel.SettingVMInfo

@{
    var UploadImagerBN = $"UploadImagerBN0";
    var PewViewImage = $"PewViewImage0";
    var UploadImagerBNMB = $"UploadImagerBNMB0";
    var PewViewImageMB = $"PewViewImageMB0";
}
<div class="row create-dynamic">
    <div class="col-lg-12 col-md-12">
        <div class="form-group">
            <label>Banner Image</label>
            <div class="avatar-preview">
                <div class="avatar-preview">
                    <img class="my-3 avatar-xxl object-fit-cover" id="@PewViewImage" src="" alt="Banner profile picture">
                </div>
                <div class="change-photo-btn">
                    <div>
                        <p>Add Image</p>
                    </div>
                    <input type="file" asp-for="@Model.bannerInfoVMs[0].UploadImg" class="upload" id="@UploadImagerBN" accept=".png, .jpg, .jpeg" onchange="previewImage(this, '@PewViewImage')">
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12 col-md-12">
        <div class="form-group">
            <label>Ảnh banner cho giao diện điện thoại</label>
            <div class="avatar-preview">
                <div class="avatar-preview">
                    <img class="my-3 avatar-xxl object-fit-cover" id="@PewViewImageMB" src="" alt="Banner profile picture">
                </div>
                <div class="change-photo-btn">
                    <div>
                        <p>Add Image</p>
                    </div>
                    <input type="file" asp-for="@Model.bannerInfoVMs[0].UploadImgMobile" class="upload" id="@UploadImagerBN" accept=".png, .jpg, .jpeg" onchange="previewImage(this, '@PewViewImageMB')">
                </div>
            </div>
        </div>
    </div>
</div>
